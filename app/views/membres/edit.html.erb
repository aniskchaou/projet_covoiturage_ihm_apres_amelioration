<header class="header-login-signup">

	<div class="header-limiter">

		<nav class="bootstraapt">
			<div class="navbar-header">

				<%= image_tag  'logo1.png' ,'height':134 ,'width':154 %>
			</div>
		</nav>

		<ul>
			<% if session[:current_user_id] %>
			<% session[:current_user_id].each do |m| %>
			<% @va=  m["id"]     %>
			<%    @nom= m["nom"]    %>
			<%    @prenom= m["prenom"]  %>
			<% end %>


			<li><span class="label label-success" >Bienvenue ! <%= @nom+' '+@prenom    %></span></li>
			<% else %>

			<li><a href="/membres/connexion">Login</a></li>
			<li><a href="/membres/new">Inscription</a></li>

			<% end %>
		</ul>
	</div>

</header>

<body style="padding-left: 115px;padding-right: 115px;">
	<!-- Menu pricipal -->
	<ul class="nav nav-tabs">
		<li role="presentation" class="active"><a href="#">Home</a></li>
		<% if session[:current_user_id] %>
		<% session[:current_user_id].each do |m| %>
		<% @va=  m["id"]       %>

		<% end %>
		<li role="presentation"><a href="/membres/<%=@va%>/">Mon Profile</a></li>
		<li role="presentation"><a href="/trajets/new">Ajouter un trajet</a></li>
		<li role="presentation"><a href="/trajets/">Mes trajets</a></li>
		<li role="presentation"><a href="/membres/logout">Deconnexion</a></li>
		<% else %>
		<li role="presentation"><a href="/membres/connexion">Connexion</a></li>
		<li role="presentation"><a href="/membres/new">Inscription</a></li>

		<% end %>

		
	</ul>
	<!-- Menu pricipal -->
	<!--Breadcrumbs-->
	<ol class="breadcrumb">
		<li><a href="/trajets/search">Acceuil</a></li>
		<li><a href="">Mon profile</a></li>
		<li><a href="">Modifier</a></li>
		
	</ol>
	<!--/Breadcrumbs-->
	<!-- pabel content -->
	<div class="panel panel-default">
		<div class="panel-heading"><h3>Modifier profile</h3></div>
		<div class="panel-body" >
			<!--img src="../logo.png" class="img-responsive img-rounded" alt="Responsive image" style="width: 100%;height: 369px;"-->
			<div class="jumbotron" align="center">
				<%= form_for @membre, :url =>{:action => "update", :id =>@membre} do |f| %>


				<label>nom</label>
				<p> <%= f.text_field 'nom' ,{'class':'form-control','data-validation':'length','data-validation-length':'4-10'}%></p>
				<label>prenom</label>
				<p> <%= f.text_field 'prenom',{'class':'form-control','data-validation':'length','data-validation-length':'4-10'} %></p>
				<label>age</label>
				<p> <%= f.text_field 'age',{'class':'form-control','data-validation':'number','data-validation-length':'18-80'} %></p>
				<label>email</label>
				<p><%= f.text_field 'email',{'class':'form-control','data-validation':'email'} %></p>
				<label>mdp</label>
				<p> <%= f.password_field 'mdp',{'class':'form-control','data-validation':'length','data-validation-length':'4-10'} %></p>

				<%= f.submit "modifier" %>
				<% end %>



			</div>



		</div>
	</div>


</div>
