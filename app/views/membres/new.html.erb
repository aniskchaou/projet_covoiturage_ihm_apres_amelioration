<header class="header-login-signup">

	<div class="header-limiter">

<nav class="bootstraapt">
			<div class="navbar-header">
				 
				<%= image_tag  'logo1.png' ,'height':134 ,'width':154 %>
			</div>
		</nav>

		<ul>
			<li><a href="/membres/connexion">Login</a></li>
			
		</ul>
		

	</div>

</header>

<body style="padding-left: 115px;padding-right: 115px;">
<!-- Menu pricipal -->
<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">Home</a></li>

</ul>
<!-- Menu pricipal -->
<!--Breadcrumbs-->
<ol class="breadcrumb">
		<li><a href="/trajets/search">Acceuil</a></li>
		<li class="active">Inscription</li>
</ol>
<!--/Breadcrumbs-->
<!-- pabel content -->
<div class="panel panel-default">
  <div class="panel-heading"><strong>Inscription nouvel visiteur :</strong></div>
  <div class="panel-body" >
<!--img src="../logo.png" class="img-responsive img-rounded" alt="Responsive image" style="width: 100%;height: 369px;"-->
	<div class="jumbotron" align="center">

		<div class="form-horizontal">
			<%= form_tag :action => 'create' do %>
			<div class="form-group ">
				<label class="col-sm-3 control-label" >Nom :</label>
				<div class="col-sm-7">
				
				<%= text_field 'membres', 'nom',{class:'form-control','data-validation':'length','data-validation-length':'4-10'}  %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-3 control-label" >Prénom :</label>
				<div class="col-sm-7">
				<%= text_field 'membres', 'prenom' ,{class:'form-control','data-validation':'length','data-validation-length':'4-10'} %>

				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-3 control-label" >Age :</label>
				<div class="col-sm-7">
				 <%= text_field 'membres', 'age' ,{class:'form-control','data-validation':'number'} %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-3 control-label" >Email :</label>
				<div class="col-sm-7">
				  <%= text_field 'membres', 'email' ,{class:'form-control','data-validation':'email'} %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-3 control-label" >Mot de passe :</label>
				<div class="col-sm-7">
				  <%= password_field 'membres', 'mdp' ,{class:'form-control','data-validation':'length','data-validation-length':'4-10'} %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-3 control-label" >re-entrer mot de passe :</label>
				<div class="col-sm-7">
			       <input type="password" class="form-control" data-validation="confirmation" data-validation-confirm="membres[mdp]"/>

				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-3 col-sm-7" >
					<span style="margin-right: 511px;margin-top: 32px;">
						<%= submit_tag " S'inscrire " ,class:'btn btn-primary' %>
					</span>
				

				</div>
			 </div>
			
			<% end -%>
	  
		</div>

	</div>

  </div>
</div>
<!-- pabel content -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
